<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane id="BorderPane" fx:id="fxRoot" prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fx.controllers.FXMLPantallaPrincipalController">
    <top>
        <MenuBar fx:id="fxMenuBar" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="General">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#cargarPantallaLogin" text="Volver al Login" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Articulos">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#cargarPantallaAñadirArticulo" text="Añadir" />
                        <MenuItem mnemonicParsing="false" onAction="#cargarPantallaActualizarArticulo" text="Actualizar" />
                        <MenuItem mnemonicParsing="false" onAction="#cargarPantallaBorrarArticulo" text="Borrar" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Empleados">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#cargarPantallaAñadirEmpleado" text="Añadir" />
                        <MenuItem mnemonicParsing="false" onAction="#cargarPantallaActualizarEmpleado" text="Actualizar" />
                        <MenuItem mnemonicParsing="false" onAction="#cargarPantallaBorrarEmpleado" text="Borrar" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Categorias">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#cargarPantallaAñadirCategoria" text="Añadir" />
                        <MenuItem mnemonicParsing="false" onAction="#cargarPantallaActualizarCategoria" text="Actualizar" />
                        <MenuItem mnemonicParsing="false" onAction="#cargarPantallaBorrarCategoria" text="Borrar" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
